


<div style="width:40%; margin:auto">
<h1>Please sign in</h1>
<%= form_tag '/login' do %>

  Email: <%= text_field_tag :email, nil, class: 'form-control'%><br>
  Password: <%= password_field_tag :password, nil, class: 'form-control' %><br>
  <%= submit_tag "Sign in", class: 'btn btn-lg btn-primary' %>

<% end %>
</div>
